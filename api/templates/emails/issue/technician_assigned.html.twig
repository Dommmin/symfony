{% extends 'emails/base.html.twig' %}

{% block title %}Przypisanie technika do zgłoszenia{% endblock %}

{% block header %}Przypisanie technika do zgłoszenia{% endblock %}

{% block content %}
    <div class="space-y-4">
        <p class="text-gray-700">
            Do Twojego zgłoszenia <span class="font-mono bg-gray-100 px-2 py-1 rounded">{{ issue_id }}</span> 
            został przypisany technik:
        </p>

        <div class="bg-blue-50 p-4 rounded-lg border border-blue-100">
            <div class="flex items-center space-x-4">
                <div class="flex-1">
                    <h3 class="font-semibold text-lg text-blue-900">{{ technician.firstName }} {{ technician.lastName }}</h3>
                    <p class="text-blue-700">{{ technician.email }}</p>
                    {% if technician.specialization %}
                        <p class="text-sm text-blue-600 mt-1">Specjalizacja: {{ technician.specialization }}</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="bg-gray-50 p-4 rounded-lg mt-4">
            <h2 class="text-lg font-semibold mb-2">Szczegóły zgłoszenia:</h2>
            <ul class="list-none space-y-2">
                <li><strong>Tytuł:</strong> {{ issue.title }}</li>
                <li><strong>Status:</strong> {{ issue.status.value }}</li>
                <li><strong>Priorytet:</strong> {{ issue.priority.value }}</li>
            </ul>
        </div>
    </div>
{% endblock %} 