{% extends 'emails/base.html.twig' %}

{% block title %}Nowe zgłoszenie do obsługi{% endblock %}

{% block header %}Nowe zgłoszenie do obsługi{% endblock %}

{% block content %}
    <div class="space-y-4">
        <p class="text-gray-700">
            Zostało do Ciebie przypisane nowe zgłoszenie <span class="font-mono bg-gray-100 px-2 py-1 rounded">{{ issue_id }}</span>
        </p>

        <div class="bg-gray-50 p-4 rounded-lg">
            <h2 class="text-lg font-semibold mb-4">Szczegóły zgłoszenia:</h2>
            
            <div class="space-y-4">
                <div>
                    <h3 class="font-medium text-gray-900">Tytuł</h3>
                    <p class="mt-1 text-gray-700">{{ issue.title }}</p>
                </div>

                <div>
                    <h3 class="font-medium text-gray-900">Opis</h3>
                    <div class="mt-1 text-gray-700 whitespace-pre-wrap">{{ issue.description }}</div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <h3 class="font-medium text-gray-900">Priorytet</h3>
                        <p class="mt-1">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                {% if issue.priority.value == 'HIGH' %}
                                    bg-red-100 text-red-800
                                {% elseif issue.priority.value == 'MEDIUM' %}
                                    bg-yellow-100 text-yellow-800
                                {% else %}
                                    bg-green-100 text-green-800
                                {% endif %}">
                                {{ issue.priority.value }}
                            </span>
                        </p>
                    </div>

                    <div>
                        <h3 class="font-medium text-gray-900">Status</h3>
                        <p class="mt-1">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                {% if issue.status.value == 'NEW' %}
                                    bg-blue-100 text-blue-800
                                {% elseif issue.status.value == 'IN_PROGRESS' %}
                                    bg-purple-100 text-purple-800
                                {% elseif issue.status.value == 'DONE' %}
                                    bg-green-100 text-green-800
                                {% else %}
                                    bg-gray-100 text-gray-800
                                {% endif %}">
                                {{ issue.status.value }}
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-blue-50 p-4 rounded-lg border border-blue-100">
            <h3 class="text-sm font-medium text-blue-800">Zgłaszający</h3>
            <div class="mt-2">
                <p class="text-blue-900">{{ issue.user.email }}</p>
            </div>
        </div>
    </div>
{% endblock %} 