{% extends 'emails/base.html.twig' %}

{% block title %}Zmiana statusu zgłoszenia{% endblock %}

{% block header %}Zmiana statusu zgłoszenia{% endblock %}

{% block content %}
    <div class="space-y-4">
        <p class="text-gray-700">
            Status Twojego zgłoszenia <span class="font-mono bg-gray-100 px-2 py-1 rounded">{{ issue_id }}</span> 
            został zmieniony na: <span class="font-semibold text-blue-600">{{ status }}</span>
        </p>

        <div class="bg-gray-50 p-4 rounded-lg mt-4">
            <h2 class="text-lg font-semibold mb-2">Szczegóły zgłoszenia:</h2>
            <ul class="list-none space-y-2">
                <li><strong>Tytuł:</strong> {{ issue.title }}</li>
                <li><strong>Status:</strong> <span class="text-blue-600">{{ status }}</span></li>
                <li><strong>Priorytet:</strong> {{ issue.priority.value }}</li>
                {% if issue.technician %}
                    <li><strong>Przypisany technik:</strong> {{ issue.technician.firstName }} {{ issue.technician.lastName }}</li>
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock %} 